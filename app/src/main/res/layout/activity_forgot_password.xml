<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_google_signin_btn_text_dark_disabled"
    tools:context=".ForgotPasswordActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <EditText
                android:id="@+id/reset_password_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/inputs"
                android:drawableLeft="@drawable/email"
                android:layout_marginTop="200dp"
                android:hint="Enter your Email "
                android:textColorHint="#5464BF"
                android:inputType="textEmailAddress"
                android:padding="8dp"
                android:drawableStart="@drawable/email" />


            <Button
                android:id="@+id/send_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_below="@+id/reset_password_email"
                android:background="@drawable/button"
                android:padding="17dp"
                android:text="Send"
                android:textAllCaps="true"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/reset_password_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/send_button"
                android:layout_marginTop="30dp"
                android:padding="10dp"
                android:text="@string/forgot_password"
                android:gravity="center"
                android:textColor="#5464BF"
                android:textSize="15sp"
                android:textStyle="bold">
            </TextView>



        </RelativeLayout>

    </ScrollView>

</RelativeLayout>