<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_google_signin_btn_text_dark_disabled"
    tools:context=".MemeActivity">


    <include
        android:id="@+id/meme_home_bar"
        layout="@layout/app_bar_layout"
        />

    <FrameLayout
        android:id="@+id/meme_maincontainer"
        android:layout_width="match_parent"
        android:layout_height="671dp"
        android:layout_below="@+id/meme_home_bar"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        >

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/meme_post_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>

    <ImageButton
        android:id="@+id/meme_upper_add_post_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/add_pic_high"
        android:layout_marginBottom="4dp"
        android:layout_marginRight="12dp"
        android:background="@color/colorPrimaryDark"
        android:scaleType="centerCrop"
        android:baselineAlignBottom="false"
        android:focusableInTouchMode="false"
        >

    </ImageButton>


</RelativeLayout>