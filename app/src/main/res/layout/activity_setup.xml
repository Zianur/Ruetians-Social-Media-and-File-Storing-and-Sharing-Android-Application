<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_google_signin_btn_text_dark_disabled"
    tools:context=".SetupActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/setup_profileimage"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_alignParentTop="true"
                android:src="@drawable/profile" />

            <EditText
                android:id="@+id/setup_fullname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/inputs"
                android:drawableLeft="@drawable/name"
                android:layout_below="@+id/setup_profileimage"
                android:hint="Full Name"
                android:inputType="textMultiLine"
                android:textColorHint="#5464BF"
                android:padding="10dp"
                android:layout_marginTop="30dp"
                android:drawableStart="@drawable/name" />

            <EditText
                android:id="@+id/setup_roll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/setup_fullname"
                android:background="@drawable/inputs"
                android:drawableLeft="@drawable/roll"
                android:hint="Roll"
                android:inputType="textMultiLine"
                android:padding="10dp"
                android:textColorHint="#5464BF"
                android:layout_marginTop="20dp"
                android:drawableStart="@drawable/roll" />

            <EditText
                android:id="@+id/setup_series"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/setup_roll"
                android:background="@drawable/inputs"
                android:drawableLeft="@drawable/roll"
                android:hint="Series"
                android:inputType="textMultiLine"
                android:padding="10dp"
                android:textColorHint="#5464BF"
                android:layout_marginTop="20dp"
                android:drawableStart="@drawable/roll" />

            <EditText
                android:id="@+id/setup_phone_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/setup_series"
                android:background="@drawable/inputs"
                android:drawableLeft="@drawable/roll"
                android:textColorHint="#5464BF"
                android:hint="Phone Number"
                android:inputType="textMultiLine"
                android:padding="10dp"
                android:layout_marginTop="20dp"
                android:drawableStart="@drawable/roll"
                tools:ignore="TextFields" />

            <EditText
                android:id="@+id/setup_about_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/setup_phone_number"
                android:background="@drawable/inputs"
                android:drawableLeft="@drawable/writing"
                android:hint="About You"
                android:inputType="textMultiLine"
                android:padding="10dp"
                android:textColorHint="#5464BF"
                android:layout_marginTop="20dp"
                android:drawableStart="@drawable/writing" />



            <Button
                android:id="@+id/setup_save_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/setup_about_user"
                android:background="@drawable/button"
                android:padding="17dp"
                android:layout_marginTop="40dp"
                android:text="save"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"
                />

        </RelativeLayout>


    </ScrollView>



</RelativeLayout>